<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   
 android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hnlylgj.sensor.MainActivity" >
   
    <TextView
        android:id="@+id/labeltitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0000"
         android:textSize="20sp"
          android:textStyle="bold"
        android:text="@string/labeltip" />
    
    <EditText
        android:id="@+id/editText1"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labeltitle" >
        <requestFocus />
    </EditText>
    
    
     <EditText
        android:id="@+id/editText2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      
        android:layout_below="@+id/editText1" >
       
   
        </EditText>
    
     <Button
        android:id="@+id/btnlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/editText2"
        android:text="登录验证" />
     
        <Button
        android:id="@+id/btnCreateChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btnlogin"
        android:text="建立通道" />
        
         <Button
        android:id="@+id/btnCloseChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btnCreateChannel"
        android:text="关闭通道" />
          
         <Button
        android:id="@+id/btnLoginChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btnCloseChannel"
        android:text="注册通道" />
         
          <Button
        android:id="@+id/btnKeepChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btnLoginChannel"
        android:text="维持通道" />
     
     
       <Button
        android:id="@+id/btnremoteopen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"       
        android:layout_below="@+id/btnKeepChannel"
        android:text="远程开门" />
       
       
        <Button
        android:id="@+id/btnremotesnap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btnremoteopen"
        android:text="远程拍照" />
        
        <Button
        android:id="@+id/btngetpower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btnremotesnap"
        android:text="查询电量" />
       
       
           <Button
        android:id="@+id/btntestcreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btngetpower"
        android:text="TestCreate" />
       
        
            <Button
        android:id="@+id/btntestclose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btntestcreate"
        android:text="TestClose" />
       
     

</RelativeLayout>
