<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hnlylgj.sensor.LoginBusActivity" >

   <TextView
        android:id="@+id/labeltitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0000"
         android:textSize="20sp"
          android:textStyle="bold"
        android:text="@string/labeltip" />
    
    <EditText
        android:id="@+id/editText1"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labeltitle" >
        <requestFocus />
    </EditText>
    
    
     <EditText
        android:id="@+id/editText2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"      
        android:layout_below="@+id/editText1" >
   
        </EditText>
    
     <Button
        android:id="@+id/btnlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/editText2"
        android:text="登录验证" />
     
        <Button
        android:id="@+id/btnCreateChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btnlogin"
        android:text="建立通道" />
        
         <Button
        android:id="@+id/btnCloseChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btnCreateChannel"
        android:text="关闭通道" />
          
         <Button
        android:id="@+id/btnLoginChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btnCloseChannel"
        android:text="注册通道" />
         
          <Button
        android:id="@+id/btnKeepChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btnLoginChannel"
        android:text="维持通道" />
    
       <Button
        android:id="@+id/btnstopservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btnKeepChannel"
        android:text="停止服务" />
       
        <Button
        android:id="@+id/btnfullystopservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/btnstopservice"
        android:text="完全停止" />
    
</RelativeLayout>
